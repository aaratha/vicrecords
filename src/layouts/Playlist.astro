---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'playlists'>['data'];

const { title, pubDate, playlistURL } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} />
		<style>
		</style>
	</head>

	<body class="w-full h-full bg-black">
		<Header />
		<main class="">
			<article class="w:full ml-10 mr-10  sm:w-[45rem] sm:m-auto">
				<div class="mt-5">
					<div class="text-center ">
						<iframe style="border-radius:12px" src={`${playlistURL.replace('spotify.com/playlist', 'spotify.com/embed/playlist')}?utm_source=generator`} width="100%" height="352" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
						<div class=" text-red-500 mt-4">
							<FormattedDate date={pubDate} />
						</div>
						<h1>{title}</h1>
						<hr class="mb-6" />
					</div>
					<slot class="mt-5" />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
