---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body} = Astro.props;
---

<li class="link-card border mb-4 border-white border-opacity-25 hover:border-white hover:shadow-xl ">
	<a href={href}>
		<h2 class="flex flex-row items-center justify-center">
			<slot />
			{title}
			<span>&rarr;</span>
		</h2>
		<p>
			{body}
		</p>
	</a>
</li>
<style>
	.link-card {
		list-style: none;
		display: flex;
		position: relative;
		margin-left: 1.5rem;
		margin-right: 1.5rem;
		background-color: #00000000;
		background-image: none;
		background-size: 400%;
		border-radius: 50%;
		height: 17rem;
		background-position: 100%;
		scale: 1;
		transition: all 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	.link-card > a {
		width: 17rem;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(2.6rem);
		border-radius: 8px;
		color: rgba(255, 255, 255, 0.678);
		background-color: #00000000;
		opacity: 0.8;
	}
	h2 {
		margin: 0;
		font-size: 1.7rem;
		text-align: left;
		width: 100%;
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.link-card:hover {
    	transform: scale(1.1); /* Adjust this value as needed */
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-dark));
	}
	.link-card::before {
		content: "";
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: inherit;
		border-radius: inherit;
		z-index: -1;
		transition: transform 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}

	.link-card:hover::before {
		transform: scale(1.1); /* Adjust this value as needed */
	}
</style>
