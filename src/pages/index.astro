---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import Card from '../components/Card.astro';
import logo from '../logo.svg';
import Layout from '../layouts/Layout.astro';
import '@fontsource/permanent-marker';
import '@fontsource/blackout-two-am';
import '@fontsource/frijole';
import '@fontsource/rubik-burned';
import '@fontsource/monoton';
import '@fontsource/beth-ellen';
import '@fontsource/rock-salt';

//import CMS from 'decap-cms-app'
// Initialize the CMS object
//CMS.init()
// Now the registry is available via the CMS object.
//CMS.registerPreviewTemplate('my-template', MyTemplate)
---



<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
	</head>
	<body class=" bg-gradient-to-br from-black to-brown bg-cover">
		<Header title={SITE_TITLE} />
		<Layout title={SITE_TITLE} >
		<main >
			<div class="flex flex-col items-center ">
				<div class="h-[calc(100dvh)] flex flex-col items-center">
					<img src="/backdrop.jpg" class=" w-full h-full overflow-hidden absolute z-0 top-0 object-cover" />
					<div class="w-full h-full overflow-hidden absolute z-10 top-0 object-cover black-grad" />
					<div class=" w-full h-full overflow-hidden absolute z-20 top-0 bg-cover" />
					<div class="gradient-blur left-0 top-0 z-30 w-[50vw] h-[calc(100dvh)] absolute flex flex-col pl-10 flex-wrap sm:flex-nowrap rounded-xl">
						<h1 class=" mt-36 font-serif text-7xl z-30 sm:text-8xl md:text-8xl">Vic</h1>
						<span class=" ml-24 text-8xl z-30 font-serif bg-clip-text text-transparent text-white bg-gradient-to-br from-amber-500 via-red-500 to-brown">Records</span>
						<div class="flex flex-row mt-10">
							{/*<img src="/logo.png" class="w-[16rem] z-50">*/}
							<div class="flex flex-col flex-wrap ml-3 min-w-[5rem] max-w-[25rem] z-50">
								<p class="font-bold text-2xl pt-4 pb-0 mb-[7px]">
									Vic Records is the home of all things music at Victoria College.
								</p>
								<p class="text-lg">
									Whether a musician or a fan of music, Vic Records offers everyone an opportunity to experience the future of music. Contact us to get involved in future events. We would love to have you!
								</p>
							</div>
						</div>
					</div>
					{/*<svg xmlns="http://www.w3.org/2000/svg" width="1288" height="136" viewBox="0 0 1288 232" fill="none" class="absolute z-20 mt-[6rem]" opacity="0.5">
						<path d="M19 210C57.5 146 95 90 153 1H1286.5L1142 210H19Z" fill="black"/>
						<path d="M1138 216.5H14.5L2 231.5H1123.5L1138 216.5Z" fill="black"/>
						<path d="M19 210C57.5 146 95 90 153 1H1286.5L1142 210H19Z" stroke="black"/>
						<path d="M1138 216.5H14.5L2 231.5H1123.5L1138 216.5Z" stroke="black"/>
					</svg>*/}
					{/*<p class="italic z-10 text-indigo-950 font-serif text-xl flex flex-row items-center mb-12">
						At
						<img src="/uoft.jpg" class="ml-3 w-[10rem]" />
					</p>*/}
					
					{/*<a class="m-auto mt-0 mb-0"><button class="border p-2 pl-4 pr-4 rounded-lg border-black border-opacity-25 hover:p-4 transition-all hover:shadow-xl hover:bg-gray-300">Explore</button></a>*/}
				</div>
				<ul role="list" class="pb-5 flex flex-row flex-wrap justify-center w-[100vw]">
					<Card
						href="https://linktr.ee/vicrecords/"
						title="Links"
						body="Explore our online presence on various platforms."
					>
						<svg class="h-full w-10"
						fill="currentColor"
						viewBox="0 0 16 16"
						>
							<path d="M4.715 6.542L3.343 7.914a3 3 0 104.243 4.243l1.828-1.829A3 3 0 008.586 5.5L8 6.086a1.002 1.002 0 00-.154.199 2 2 0 01.861 3.337L6.88 11.45a2 2 0 11-2.83-2.83l.793-.792a4.018 4.018 0 01-.128-1.287z" />
							<path d="M6.586 4.672A3 3 0 007.414 9.5l.775-.776a2 2 0 01-.896-3.346L9.12 3.55a2 2 0 112.83 2.83l-.793.792c.112.42.155.855.128 1.287l1.372-1.372a3 3 0 10-4.243-4.243L6.586 4.672z" />
						</svg>
					</Card>
					<Card
						href="https://astro.build/integrations/"
						title="Events"
						body="We host at least one event every month. Check out our calendar for more info."
					>
						<svg class="h-full w-9 mr-1"
						fill="none"
						stroke="currentColor"
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width={2}
						viewBox="0 0 24 24"
						>
							<path stroke="none" d="M0 0h24v24H0z" />
							<path d="M6 5 H18 A2 2 0 0 1 20 7 V19 A2 2 0 0 1 18 21 H6 A2 2 0 0 1 4 19 V7 A2 2 0 0 1 6 5 z" />
							<path d="M16 3v4M8 3v4M4 11h16M8 15h2v2H8z" />
						</svg>
					</Card>
					<Card
						href="https://astro.build/themes/"
						title="Playlists"
						body="We make collaborative playlists every month, published on the 15th."
					>
						<svg class="h-full w-10 mr-1"
						viewBox="0 0 24 24"
						fill="currentColor"
						>
							<path d="M15 6H3v2h12V6m0 4H3v2h12v-2M3 16h8v-2H3v2M17 6v8.18c-.31-.11-.65-.18-1-.18a3 3 0 00-3 3 3 3 0 003 3 3 3 0 003-3V8h3V6h-5z" />
						</svg>
					</Card>
					<Card
						href="https://astro.build/chat/"
						title="Blog"
						body="Come read our blog posts about music, events, and more."
					>
						<svg class="h-full w-9 mr-1"
							viewBox="0 0 24 24"
							fill="currentColor"
							height="1em"
							width="1em"
						>
							<path d="M12 2A10 10 0 002 12a9.89 9.89 0 002.26 6.33l-2 2a1 1 0 00-.21 1.09A1 1 0 003 22h9a10 10 0 000-20zm0 18H5.41l.93-.93a1 1 0 000-1.41A8 8 0 1112 20zm5-9H7a1 1 0 000 2h10a1 1 0 000-2zm-2 4H9a1 1 0 000 2h6a1 1 0 000-2zM9 9h6a1 1 0 000-2H9a1 1 0 000 2z" />
						</svg>
					</Card>
				</ul>
			</div>
		</main>
		</Layout>
		<Footer />
		<script>
			declare global {
				interface Window {
					netlifyIdentity: any;
				}
			}

			if (window.netlifyIdentity) {
				window.netlifyIdentity.on("init", (user:any) => {
				if (!user) {
					window.netlifyIdentity.on("login", () => {
					document.location.href = "/admin/";
					});
				}
				});
			}
		</script>
	</body>
</html>
<style>
	.vic-font {
		font-family: 'Rock Salt', sans-serif;
	}
	.special-font {
		font-family: 'Permanent Marker', sans-serif;
	}
	.black-grad {
		background: linear-gradient(to bottom, rgba(17, 17, 17, 0.747), rgba(0,0,0,0.4));
	}

	.gradient-blur {
		&:after {
			content: '';
			position: absolute;
			inset: 0%;
			background-image: linear-gradient(0deg, rgba(116, 116, 116, 0.5), rgba(0, 0, 0, 0));
			backdrop-filter: blur(20px);
			-webkit-mask: linear-gradient(-90deg, transparent, black 50%);
		}
	}

</style>