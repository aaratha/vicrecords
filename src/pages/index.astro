		</main>
		</Layout>
		<Footer />
		<script>
			declare global {
				interface Window {
					netlifyIdentity: any;
				}
			}

			if (window.netlifyIdentity) {
				window.netlifyIdentity.on("init", (user:any) => {
				if (!user) {
					window.netlifyIdentity.on("login", () => {
					document.location.href = "/admin/";
					});
				}
				});
			}
			let isTranslated = false;
			let isRotated = false;
			const tgt = document.querySelector("#drawer");
				tgt.addEventListener("click", () => {
					console.log("Hello, on client");
					const gradientBlurDiv = document.getElementById('blur');
					if (gradientBlurDiv) {
						if (isTranslated) {
						gradientBlurDiv.style.transform = 'translateX(0)';  // If the div is already translated, move it back to its original position
						} else {
						gradientBlurDiv.style.transform = 'translateX(-93%)';  // If the div is not translated, translate it
						}
						isTranslated = !isTranslated;  // Update the translation state
					}
					const svg = document.getElementById('arrow');  // Select the SVG
					if (svg) {
						if (isRotated) {
						svg.style.transform = 'rotate(0deg)';  // If the SVG is already rotated, rotate it back to 0 degrees
						} else {
						svg.style.transform = 'rotate(180deg)';  // If the SVG is not rotated, rotate it by 180 degrees
						}
						isRotated = !isRotated;  // Update the rotation state
					}  // Toggle the 'rotate-180' class
				});
		</script>
	</body>
</html>
<style>
	.vic-font {
		font-family: 'Rock Salt', sans-serif;
	}
	.special-font {
		font-family: 'Permanent Marker', sans-serif;
	}
	.black-grad {
		background: linear-gradient(to bottom, rgba(17, 17, 17, 0.4), rgba(0,0,0,0.4));
	}

	.gradient-blur {
		box-shadow: 0 0 3rem 0 rgba(0, 0, 1, 0.5);
		transition: transform 0.3s ease-in-out;
		&:after {
			content: '';
			position: absolute;
			inset: 0%;
			background-image: linear-gradient(135deg, rgba(7, 7, 7, 0.514), rgba(255, 255, 255, 0.274));
			backdrop-filter: blur(40px);
			-webkit-mask: linear-gradient(-90deg, transparent, black 0%);
		}
	}
	.rotate-180 {
		transform: rotate(180deg);
	}

</style>